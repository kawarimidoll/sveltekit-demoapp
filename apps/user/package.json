    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "drizzle-kit": "^0.22.0",
    "mdsvex": "^0.11.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
